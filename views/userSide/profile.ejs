<style>
	/* Base styles for the form */
.formDatas {
    /* max-width: 600px; */
    margin: 0 auto;
    padding: 30px;
	margin-top: 50px;
    background: #f9f9f9a4;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
	/* max-height: 500px; */
}

/* Style for form fields */
.form-group {
	display: flex;
	align-items: center;
    margin-bottom: 20px;
}

.form-group label {
	flex: 0 0 30%;
    /* display: block; */
    font-size: 16px;
    color: #333;
    margin-right: 20px;
	text-align: left;
}

.form-group input {
    width: 100%;
    padding: 12px;
    font-size: 16px;
    border: 1px solid #ddd;
    border-radius: 4px;
    box-sizing: border-box;
}

.form-group input:focus {
    border-color: #007bff;
    outline: none;
    box-shadow: 0 0 4px rgba(0, 123, 255, 0.25);
}

/* Style for the submit button */
.btn-submit {
    display: inline-block;
    padding: 12px 20px;
    font-size: 16px;
    color: #fff;
    background-color: #007bff;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    text-align: center;
    text-decoration: none;
    transition: background-color 0.3s;
}

.btn-submit:hover {
    background-color: #0056b3;
}

/* Responsive adjustments */
@media (max-width: 768px) {
    .formDatas {
        padding: 20px;
    }

    .form-group input {
        font-size: 14px;
    }

    .btn-submit {
        font-size: 14px;
        padding: 10px 16px;
    }
}

</style>
