<%- include('../partials/header') %>

<div class="box">
        <h3 style="font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;;">CATEGORY LIST</h3>
        <div class="categorylist">
            <% categories?.forEach(element => { %>
                <div class="catbox">
                    <%= element.name %>
                    <div class="group">
                        <a href="/admin/editCategory/<%= element.id %>" class="Edit">Edit</a>
                        <a href="" class="Edit">drop</a>
                    </div>
                </div>
            <% }) %>
        </div>
        <div class="addbtn">
            <a href="/admin/addCategory">Add Category</a>
        </div>
    </div>
    <style>
        *{
            margin: 0;
            padding: 0;
        }
        .box {
            margin: 0;
            padding: 0;
            width: 100%;
            height: calc(100% - 80px);
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            gap: 30px;
        }
        .addbtn{
            width: 200px;
            height: 40px;
            background-color:  rgba(0, 0, 0, 0.486);
            border-radius: 5px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: sans-serif;
        }
        a{
            color: beige;
            text-decoration: none;
        }
        h3 {
            text-align: center;
            color: beige;
        }
        .categorylist {
            width: 100%;
            height: 70%;
            border-radius: 5px;
            display: flex;
            flex-direction: column;
            gap: 5px;
            align-items: center;
            overflow-y: auto;
            scrollbar-width: none;
        }
        .catbox{
            width: 50%;
            height: 100px;
            background-color: rgba(0, 0, 0, 0.486);
            color: white;
            font-size: medium;
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
            display: flex;
            align-items: center;
            border-radius: 10px;
            padding-left: 20px;
            flex-direction: row;
            justify-content: space-between;
        }
        .Edit{
            width: 50px;
            height: 50px;
            border-radius: 10px;
            background-color: rgba(169, 55, 55, 0.841);
            margin-right: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .group{
            display: flex;
            flex-direction: row;
        }
    </style>

    <%- include('../partials/footer') %>