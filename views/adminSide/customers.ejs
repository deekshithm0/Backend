<%- include('../partials/header') %>
    <style>
        *{
            font-family: sans-serif;
        }
        .usersData{
            width: 100%;
            height: 100%;
        }
        .customer-list {
            height: 100%;
            display: flex;
            flex-direction: column;
            overflow-y: scroll;
            scrollbar-width: none;
            border-radius: 15px;
            color: rgb(102, 255, 204);
            background-color: #86868655;
        }

        .customer-item {
            /* background-color: #007bff; */
            display: flex;
            justify-content: space-around;
            align-items: center;
            gap: 500px;
            /* padding: 10px 30px; */
            border-bottom: 1px solid #ddd;
        }

        .customer-info {
            flex: 1;
            background-color: #007bff;
        }

        .customer-actions {
            background-color: #dc3545;
            display: flex;
            gap: 10px;
        }
        .btn {
            width: 50px;
            height: 35px;
            padding: 5px 10px;
            text-decoration: none;
            color: #fff;
            border: none;
            cursor: pointer;
        }

        .btn-edit {
            background-color: #007bff;
        }

        .btn-block {
            background-color: #dc3545;
        }
    </style>

    <div class="usersData">
        <div class="customer-list">
            <% Users.forEach(user=> { %>
                <div class="customer-item">
                    <div class="customer- info">
                        <p>Name: <%= user.userName %>
                        </p>
                        <p>Email: <%= user.email %>
                        </p>
                    </div>
                    <div class="customer-action">
                        <!-- <a href="/admin/customers/editCustomer/<%= user.id %>" class="btn btn-edit">Edit</a> -->
                        <form action="/admin/customers/block/<%= user.id %>" method="post" class="block-form">
                            <button type="submit" class="btn btn-block">Block</button>
                        </form>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>

    <%- include('../partials/footer') %>